@model List<CtgBarAssociation.ViewModel.StikerSales>
@{
    ViewBag.Title = "SearchSticker";
    Layout = null;
}
<script type="text/javascript">

    $(document).ready(function () {
        $('#tabledata').DataTable();
    });

</script>

<div class="row">
    <div class="note note-danger">
        <p> @ViewBag.countvalue </p>
    </div>
    <div class="col-md-12">
        <table class="table table-striped table-bordered" id="tabledata">
            <thead>
                <tr>
                    <th>Sl NO</th>
                    <th>Name</th>
                    <th>Lin No</th>
                    <th>Rec No</th>
                    <th>Sticker Type</th>
                    <th>Creation Date</th>
                    <th>Bar codeImage</th>

                </tr>
            </thead>
            <tfoot hidden>
                <tr>
                    <th>Sl NO</th>
                    <th>Name</th>
                    <th>Lin No</th>
                    <th>Rec No</th>
                    <th>Sticker Type</th>
                    <th>Creation Date</th>
                    <th>Bar codeImage</th>

                </tr>
            </tfoot>
            <tbody>
                @foreach (var item in Model.Select((x, i) => new { Data = x, Index = i + 1 }))
                {

                    <tr>
                        <td>@item.Index</td>
                        <td>@item.Data.Name</td>
                        <td>@item.Data.LinNo</td>
                        <td>@item.Data.RecNo</td>
                        <td>@item.Data.StikerTypeName</td>
                        <td>@item.Data.CrDate.ToString("h:mm tt d MMMM yyyy")</td>
                        <td><img src="@item.Data.imageurl" /></td>

                    </tr>

                }
            </tbody>
        </table>



    </div>

</div>


