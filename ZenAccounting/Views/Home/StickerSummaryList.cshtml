@model List<CtgBarAssociation.ViewModel.StikerSales>
@{
    Layout = null;
    int s = 0;
    int c = 0;
}

  <script type="text/javascript">

    $(document).ready(function () {
        $('#Tablenext').DataTable();
    });

</script>


<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered" id="Tablenext">
            <thead>
                <tr>
                    <th>Sl NO</th>
                    <th>Name</th>
                    <th>Lin No</th>
                    <th>Sticker Type</th>
                    <th>Creation Date</th>
                    <th>Total Sticker</th>
                    <th>Total Price</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model.Select((x, i) => new { Data = x, Index = i + 1 }))
                {

                <tr>
                    <td>@item.Index</td>
                    <td>@item.Data.Name</td>
                    <td>@item.Data.LinNo</td>
                    <td>@item.Data.StikerTypeName</td>
                    <td>@item.Data.CrDate.ToString("d MMMM yyyy")</td>
                    <td>@item.Data.totalstiker @{ c += item.Data.totalstiker;}</td>
                    <td>@item.Data.Price @{ s += item.Data.Price;}</td>

                </tr>

                }
            </tbody>

            <tr>

                <td colspan="5" style="text-align:right">Total</td>
                <td>@c</td>
                <td>@s Taka</td>
            </tr>
        </table>
    </div>

</div>